@{
    ViewBag.Title = "BottleChart";
}

@Html.Partial("_MaintenancePartial")
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
</head>
<aside style="margin-top:10px">
    <div class="panel" @*style="border:1px solid"*@>
        <div style="margin-left: 20px">
            <h4>Maintenance > Bottle Chart</h4>
            <button style="max-width:90px" class="btn btn-success" onclick="location.href='@Url.Action("Add", "Maintenance", new { param = "AddBottle" })'">Add</button>
            <button style="max-width:90px" class="btn btn-success" onclick="location.href='@Url.Action("ExportBottle", "Maintenance")'">Export</button>
        </div>
        <table class="table">
            <tr>
                <th>Id</th>
                @*<th>font-size</th>*@
                <th id="hiddingEls">Item Key</th>
                <th id="hiddingElm">Description</th>
                <th>Small Tray</th>
                <th>Large Tray</th>
                <th id="hiddingEll">Changed Date</th>
                <th id="hiddingEls">Bottle Cubic Inches</th>
                <th>Action</th>
            </tr>
            @{ 
                int s = 13;
                int sp = s;
                string px = "px";
                string size = sp + px;
            }
            @foreach (var item in ViewBag.Bottles)
            {
                size = sp + px;
                <tr style="font-size:@size">
                    <td>@item.BottleId</td>
                    @*<td>@size</td>*@
                    <td id="hiddingEls">@item.BottleItemKey</td>
                    <td id="hiddingElm">@item.BottleDescription</td>
                    <td>@item.BottlesSmallTray</td>
                    <td>@item.BottlesLargeTray</td>
                    <td id="hiddingEll">@item.BottleChangedDate</td>
                    <td id="hiddingEls">@item.BottleCubicInches</td>
                    <td>@Html.ActionLink("Edit", "EditBottle", "Maintenance", new { bottleId = item.BottleId.ToString() }, null)</td>
                </tr>
                s = s + 1;
                sp = s;
                if (s > 18) { sp = 13; }
            }
        </table>
    </div>
</aside>