@model List<Brand>
@{
    ViewBag.Title = "Brands";
}
@Html.Partial("_MaintenancePartial")
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
</head>
<aside style="margin-top:10px">
    <div class="panel" style="border:1px solid">
        <div style="margin-left: 20px">
            <h4>Maintenance > Brand Code Chart</h4>
            <button style="max-width:90px" class="btn btn-success" onclick="location.href='@Url.Action("Add", "Maintenance", new { param = "AddBrand" })'">Add</button>
        </div>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Brand Name</th>
                <th>Brand Code</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="10%">@item.BrandID</td>
                    <td width="25%">@item.Brand1</td>
                    <td width="25%">@item.BrandCode</td>
                    <td width="20%">@Html.ActionLink("Edit", "EditBrand", "Maintenance", new { brandId = item.BrandID.ToString() }, null)</td>
                </tr>
            }
        </table>
    </div>
</aside>

