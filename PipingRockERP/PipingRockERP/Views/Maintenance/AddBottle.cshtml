@{
    ViewBag.Title = "AddBottle";
}
@Html.Partial("_MaintenancePartial")

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
</head>
<aside style="margin-top:10px">
    <div class="panel" style="border:1px solid">
        <div style="margin-left: 20px">
            <h4>Maintenance > Add New Bottle</h4>
        </div>
        @using (Html.BeginForm("SubmitBottleAdd", "Maintenance"))
        {
            <input style="margin-left:18px; max-width:90px" class="btn btn-success" type="submit" id="SubmitBottleAdd" value="Add" />
            <table>
                <tr>
                    <td>Bottle Item Key</td>
                    <td><input class="form-control" type="text" id="BottleItemKey" name="BottleItemKey" value="N/A" /></td>
                </tr>
                <tr>
                    <td>Bottle Description</td>
                    <td><input class="form-control" type="text" id="BottleDescription" name="BottleDescription" value="N/A" /></td>
                </tr>
                <tr>
                    <td>Bottles Small Tray</td>
                    <td><input class="form-control" type="tel" required pattern="[0-9]+" id="BottlesSmallTray" name="BottlesSmallTray" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottles Large Tray</td>
                    <td><input class="form-control" type="tel" required pattern="[0-9]+" id="BottlesLargeTray" name="BottlesLargeTray" value="0" /></td>
                </tr>
                <tr>
                    <td>Wrapped Bottles Tray Large</td>
                    <td><input class="form-control" type="tel" required pattern="[0-9]+" id="WrappedBottlesTrayLarge" name="WrappedBottlesTrayLarge" value="0" /></td>
                </tr>
                <tr>
                    <td>Wrapped Bottles Tray Small</td>
                    <td><input class="form-control" type="tel" required pattern="[0-9]+" id="WrappedBottlesTraySmall" name="WrappedBottlesTraySmall" value="0" /></td>
                </tr>
                <tr>
                    <td>Item Status Id</td>
                    <td><input class="form-control" type="tel" required pattern="[0-9]+" id="ItemStatusId" name="ItemStatusId" value="0" /></td>
                </tr>
                <tr>
                    <td>Item Type Id</td>
                    <td><input class="form-control" type="tel" required pattern="[0-9]+" id="ItemTypeId" name="ItemTypeId" value="0" /></td>
                </tr>
                <tr>
                    <td>Item Type Detail Id</td>
                    <td><input class="form-control" type="tel" required pattern="[0-9]+" id="" name="ItemTypeDetailId" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Length</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleLength" name="BottleLength" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Width</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleWidth" name="BottleWidth" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Hieght</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleHieght" name="BottleHieght" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Cubic Inches</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleCubicInches" name="BottleCubicInches" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Length Wrapped</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" step="0.001" id="BottleLengthWrapped" name="BottleLengthWrapped" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Width Wrapped</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleWidthWrapped" name="BottleWidthWrapped" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Depth Wrapped</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleDepthWrapped" name="BottleDepthWrapped" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Cubic Inch Wrapped</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleCubicInchWrapped" name="BottleCubicInchWrapped" value="0" /></td>
                </tr>
                <tr>
                    <td>Bottle Label Square Inches</td>
                    <td><input class="form-control" type="tel" required pattern="\d+([,][0-9]{1,3})?" id="BottleLabelSquareInches" name="BottleLabelSquareInches" value="0" /></td>
                </tr>
            </table>
        }
    </div>
</aside>